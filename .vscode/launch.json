{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "autoReload": {
        "enabled": true
      }
    },
    {
      "name": "Python Debugger: App",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceRoot}/app.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "autoReload": {
        "enabled": true
      }
    },
    {
      "name": "Vite.js: debug with Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/web_viewer/fe_src",
    }
  ]
}
